                android:textSize="10dp"
                android:textColor="#9C9B9B"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/Text_Sender_private"/>

            <ImageView
                android:id="@+id/photo_Sender_private"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@id/Surname_Sender_private"
                android:src="@drawable/back_group2"
                android:layout_marginTop="4dp"
                android:scaleType="fitXY"/>

            <TextView

                android:id="@+id/Download_photo_Sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/photo_Sender_private"
                android:text="Download"
                android:textColor="#6200EA"
                android:textStyle="bold"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/View_photo_Sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/Download_photo_Sender"
                android:layout_below="@id/photo_Sender_private"
                android:text="View"
                android:layout_marginStart="10dp"
                android:textColor="#6200EA"
                android:textStyle="bold"
                android:padding="3dp"/>

            <RelativeLayout
                android:id="@+id/RelativefilsSender"
                android:layout_below="@id/Surname_Sender_private"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#EE607D8B"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/photo_filsSender"
                    android:layout_alignParentStart="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/textfilsSender"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_toEndOf="@id/photo_filsSender"
                    android:layout_toStartOf="@id/Dwonloading_filsSender"
                    android:fontFamily="@font/new_font"
                    android:layout_marginTop="8dp"
                    android:text=""
                    android:textSize="16sp"
                    android:gravity="start|bottom"
                    android:textStyle="bold"
                    android:textColor="#fff"/>

                <TextView
                    android:id="@+id/textS"
                    android:layout_below="@id/textfilsSender"
                    android:layout_width="match_parent"
                    android:layout_toEndOf="@id/photo_filsSender"
                    android:layout_toStartOf="@id/Dwonloading_filsSender"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="#fff"
                    android:text="ـــــــــــــــــــــــ"
                    android:textColor="#fff"
                    android:layout_height="1dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/Dwonloading_filsSender"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_downloading"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#CFCFCF"/>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>