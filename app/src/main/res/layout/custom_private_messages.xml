                android:textSize="11dp"
                android:layout_toEndOf="@id/Date_Sender_private"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_margin="1dp"
                android:textColor="#FF6D00"/>

            <TextView
                android:id="@+id/EditedSender"
