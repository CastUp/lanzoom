<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Requests">

    <include
        android:id="@+id/Main_Action_Bar_Requests"
        layout="@layout/main_action_bar" >
    </include>

    <androidx.cardview.widget.CardView
        android:id="@+id/Card_Adsens_Requsts"
        android:layout_below="@id/Main_Action_Bar_Requests"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-8175375039939984/7499603921">
            </com.google.android.gms.ads.AdView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Text_Requests"
        android:layout_below="@id/Card_Adsens_Requsts"
        android:layout_width="match_parent"
        android:background="#DCAD4C03"
        android:elevation="3dp"
        android:text="@string/ReceivedRequests_RequestActivity"
        android:gravity="center|start"
        android:textSize="18sp"
        android:textColor="#fff"
        android:textStyle="italic"
        android:fontFamily="@font/new_font"
        android:padding="4dp"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Recycle_Requests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Text_Requests">


    </androidx.recyclerview.widget.RecyclerView>




</RelativeLayout>