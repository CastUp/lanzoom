<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#efefef"
    android:layout_height="match_parent"
    tools:context=".UserInformation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <include
        android:id="@+id/UserInformaionbar"
        layout="@layout/main_action_bar"/>

    <LinearLayout
        android:id="@+id/LinearOne"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/UserInformaionbar"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center|start"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/CircleAccountInformation"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="10dp"
            app:civ_border_color="#A6FFAB00"
            app:civ_border_width="2dp"
            android:src="#DD2C00"/>

        <TextView
            android:id="@+id/TextAccountInformaion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Account informaion "
            android:textSize="20sp"
            android:fontFamily="@font/new_font"
            android:textColor="#455A64" />

    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewAccountInformation"
            android:layout_below="@id/LinearOne"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="35dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <EditText
                   android:id="@+id/UserAccount_SurName"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="15dp"
                   android:singleLine="true"
                   android:inputType="text"
                   android:hint="Sur name"
                   android:background="@null"
                   android:textColor="#000000"
                   android:textSize="18sp"
                    />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="#ADAAAA"/>

               <EditText
                   android:id="@+id/UserAccount_status"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="15dp"
                   android:singleLine="true"
                   android:inputType="text"
                   android:hint="Status"
                   android:background="@null"
                   android:textColor="#000000"
                   android:textSize="18sp"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="1dp"
                   android:background="#ADAAAA"/>

               <EditText
                   android:id="@+id/UserAccount_Email"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="15dp"
                   android:singleLine="true"
                   android:inputType="textEmailAddress"
                   android:hint="Email"
                   android:background="@null"
                   android:textColor="#000000"
                   android:textSize="18sp"
                   />

           </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/LinearOne2"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/CardViewAccountInformation"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center|start"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CircleProfileInformation"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="10dp"
                app:civ_border_color="#A6FFAB00"
                app:civ_border_width="2dp"
                android:src="#DD2C00"/>

            <TextView
                android:id="@+id/TextProfileInformaion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Profile informaion "
                android:textSize="20sp"
                android:fontFamily="@font/new_font"
                android:textColor="#455A64" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewProfileInformation"
            android:layout_below="@id/LinearOne2"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="35dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/UserProfile_FullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:inputType="text"
                    android:hint="Full name"
                    android:background="@null"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ADAAAA"/>

                <TextView
                    android:id="@+id/UserProfile_Age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Barthday"
                    android:padding="14dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ADAAAA"/>

                <Spinner
                    android:id="@+id/UserProfile_Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:singleLine="true"
                    android:spinnerMode="dialog"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ADAAAA"/>

                <Spinner
                    android:id="@+id/UserProfile_Language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:singleLine="true"
                    android:spinnerMode="dialog"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/LinearOne3"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/CardViewProfileInformation"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center|start"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CircleLocationInformation"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="10dp"
                app:civ_border_color="#A6FFAB00"
                app:civ_border_width="2dp"
                android:src="#DD2C00"/>

            <TextView
                android:id="@+id/TextLocationInformaion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   Location informaion "
                android:textSize="20sp"
                android:fontFamily="@font/new_font"
                android:textColor="#455A64" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewLocationInformation"
            android:layout_below="@id/LinearOne3"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="35dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/UserLocation_City"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:hint="City"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ADAAAA"/>

                <EditText
                    android:id="@+id/UserLocation_Address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:singleLine="true"
                    android:hint="Address"
                    android:background="@null"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/LinearOne4"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/CardViewLocationInformation"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center|start"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CircleYourSelfInformation"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="10dp"
                app:civ_border_color="#A6FFAB00"
                app:civ_border_width="2dp"
                android:src="#DD2C00"/>

            <TextView
                android:id="@+id/TextYourSelfInformaion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   About yourself "
                android:textSize="20sp"
                android:fontFamily="@font/new_font"
                android:textColor="#455A64" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewYourSelfInformation"
            android:layout_below="@id/LinearOne4"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="35dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <EditText
                    android:id="@+id/UserYourSelf_AboutYourSelf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:hint="Your self"
                    android:background="@null"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/UserInformaionbar_FloatingActionBtn"
                android:src="@drawable/ic_tick_icon"
                android:background="@color/colorPrimary"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/CardViewYourSelfInformation"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
</ScrollView>