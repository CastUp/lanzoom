<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context=".ViewPhotos">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/SenderPhoto"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="10dp"
        android:src="#000"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff"/>

    <TextView
        android:id="@+id/SenderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAZEM Ibrahim Abd allah"
        android:textColor="#FCFCFC"
        android:textSize="18sp"
        android:fontFamily="@font/new_font"
        android:padding="5dp"
        android:layout_toEndOf="@+id/SenderPhoto"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="-20dp"
        android:background="#fff"
        android:text="ــــــــــــــــــــــــــــــــــــــــ"
        android:layout_toEndOf="@id/SenderPhoto"
        android:layout_below="@+id/SenderPhoto"/>



    <TextView
        android:id="@+id/Datephoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date : 01 03.2020"
        android:textColor="#FFD600"
        android:textSize="16sp"
        android:padding="3dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/SenderPhoto"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/Timephoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time : 10:45 PM"
        android:textColor="#FFD600"
        android:textSize="16sp"
        android:padding="3dp"
        android:layout_below="@+id/Datephoto"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"/>

    <ImageView
        android:id="@+id/MessageImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Timephoto"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/DLPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:textColor="#FFAB00"
        android:textSize="18sp"
        android:padding="3dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"/>

</RelativeLayout>