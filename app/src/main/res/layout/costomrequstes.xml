<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/Rel_Requests"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ProfileImage_Requstes"
        android:layout_width="80dp"
        android:layout_marginTop="-5dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/profile_image"
        app:civ_border_color="#A84D09"
        app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/Date_Requstes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Des 15-2019"
            android:textColor="#2643E6"/>

    <TextView
        android:id="@+id/SurName_Requstes"
        android:layout_toEndOf="@+id/ProfileImage_Requstes"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/new_font"
        android:text=""
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/Country_Request"
        android:layout_toEndOf="@+id/ProfileImage_Requstes"
        android:layout_below="@id/SurName_Requstes"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:singleLine="true"
        android:textColor="#42970B"
        android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/Linearbuttons"
            android:layout_toEndOf="@id/ProfileImage_Requstes"
            android:layout_below="@id/Country_Request"
            android:gravity="center_horizontal"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/RequestButton_Requstes"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_gravity="center"
                android:background="@drawable/button_sendmessage_userprofile"
                android:layout_margin="5dp"
                android:paddingHorizontal="10dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:elevation="10dp"
                android:textSize="15sp"
                android:text="@string/FriendRequest_userprofile"/>

            <Button
                android:id="@+id/CanceltRequest_Requstes"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_gravity="center"
                android:background="@drawable/button_request_userprofile"
                android:layout_margin="5dp"
                android:paddingHorizontal="10dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:elevation="10dp"
                android:textSize="15sp"
                android:text="@string/CancelRequest_userprofile"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/Linearbuttons"
            android:layout_toEndOf="@id/ProfileImage_Requstes"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCACA"/>


    </RelativeLayout>
</LinearLayout>